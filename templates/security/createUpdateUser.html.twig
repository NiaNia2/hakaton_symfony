{% extends 'base.html.twig' %}

{% block title %}{{ userUpdateForm ? "Modification du Compte" : "Creation du Compte" }}{% endblock %}

{% block body %}
    <div id="form">
        <div class="form">
            <div class="form-content">
                <div class="mix">
                    <figure>
                        <img src="{{ userUpdateForm ? asset('images/form/updateAccount.jpg') :  asset('images/form/createAccount.jpg') }}" alt="">
                    </figure>

                    <div class="headline">
                        <h2 class="text-headline">My Cave</h2>
                        <h3 class="text-subheadline">{{ userUpdateForm ? "Modification du Compte" : "Creation du Compte" }}</h3>
                    </div>
                </div>
                {{ form_start(userCreateForm, { attr: { class: 'all-form' } }) }}
                <span>
                        <label for="{{ userCreateForm.userName.vars.id }}">
                            Nom d'utilisateur
                        </label>
                        {% if userUpdateForm %}
                            {{ form_widget(userCreateForm.userName, {
                                attr: {
                                    'data-original': userCreateForm.userName.vars.value
                                }
                            }) }}
                            <button type="button" class="reset-btn">↩</button>
                        {% else %}
                            {{ form_widget(userCreateForm.userName) }}
                        {% endif %}
                    </span>
                <span>
                        <label for="{{ userCreateForm.email.vars.id }}">
                            Email
                        </label>
                        {% if userUpdateForm %}
                            {{ form_widget(userCreateForm.email, {
                                attr: {
                                    'data-original': userCreateForm.email.vars.value
                                }
                            }) }}
                            <button type="button" class="reset-btn">↩</button>
                        {% else %}
                            {{ form_widget(userCreateForm.email) }}
                        {% endif %}
                    </span>
                <span>
                        <label for="{{ userCreateForm.plainPassword.vars.id }}">
                            Mots de passe
                        </label>
                        {{ form_widget(userCreateForm.plainPassword) }}
                    </span>

                <input class="btn btn-lg btn-primary" type="submit" value="Validez">
                {{ form_end(userCreateForm) }}
            </div>
        </div>
    </div>
{% endblock %}