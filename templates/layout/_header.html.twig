<header class="container" id="header">
	<div class="header">
		<div class="logo-container">
			<a href="{{ path('home') }}"><img src="{{ asset('assets/images/logo/Tiny1.png') }}" alt="{{ site.name }}"></a>
		</div>
		<nav class="navbar_menu">
			<div class="navbar_list_container">
				<ul class="navbar_list">
					{% if app.user %}
						<li>
							<a class="" href="{{ path('home') }}">Accueil</a>
						</li>
						<li>
							<a href="{{ path('user',{'id' : app.user.id}) }}">Profil</a>
						</li>
						<li>
							<a href="{{ path('classement')}}">Classement</a>
						</li>
						<li>
							<a href="{{ path('app_logout')}}">Deconnection</a>
						</li>
					{% else %}
						<li>
							<a class="" href="{{ path('create_user') }}">Inscription</a>
						</li>
						<li>
							<a class="" href="{{ path('app_login') }}">Connexion</a>
						</li>
					{% endif %}
				</ul>
				<div class="dropdown">
					<i class="fa-solid fa-bars"></i>
					<ul class="dropdown-content">
						<li>
							<a class="" href="{{ path('home') }}">Accueil</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</div>
</header>
