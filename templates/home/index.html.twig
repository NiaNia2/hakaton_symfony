{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<section class="home-container">
		<div class="home-content">
			{% if app.user %}
				<div class="titre">
					<h1>Bienvenue
						{{ app.user.pseudo }}</h1>
				</div>
			{% endif %}
			<div class="banner-content">
				<div class="banner">
					<h2>Phrase d'accroche</h2>
				</div>
			</div>
			<div class="concept-content">
				<div class="concept">
					<h2>Concept partie 1</h2>
					<p>bla bla bla boom
					</p>
				</div>
			</div>

			<div class="concept-content">
				<div class="concept">
					<h2>Concept partie 2</h2>
					<p>bla bla bla boom
					</p>
				</div>
			</div>
			<div class="btn-container">

				{% if app.user %}
					<a class="btn-home" href="{{ path('games')}}">Lancer un combat</a>
				{% else %}
					<a class="btn-home" href="{{ path('create_user') }}">Inscription</a>
					<a class="btn-home" href="{{ path('app_login') }}">Connexion</a>
				{% endif %}
			</div>

		</div>
	</section>
{% endblock %}
